{
  "expo": {
    "name": "Animal Pokedex",
    "slug": "animal-pokedex-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "animalpokedex",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.animalpokedex.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to catch animals",
        "NSLocationWhenInUseUsageDescription": "This app needs location access to track where you caught animals"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ],
      "package": "com.animalpokedex.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Animal Pokedex to access your camera to catch animals"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow Animal Pokedex to use your location to track where you catch animals"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
